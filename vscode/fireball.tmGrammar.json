{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.fb",
  "patterns": [
    {
      "include": "#lineComment"
    },
    {
      "include": "#blockComment"
    },
    {
      "include": "#operator"
    },
    {
      "include": "#terminator"
    },
    {
      "include": "#dot"
    },
    {
      "include": "#comma"
    },
    {
      "include": "#leftParen"
    },
    {
      "include": "#rightParen"
    },
    {
      "include": "#leftBrace"
    },
    {
      "include": "#rightBrace"
    },
    {
      "include": "#leftBracket"
    },
    {
      "include": "#rightBracket"
    },
    {
      "include": "#number"
    },
    {
      "include": "#character"
    },
    {
      "include": "#string"
    },
    {
      "include": "#keyword"
    }
  ],
  "repository": {
    "lineComment": {
      "begin": "//",
      "end": "\n",
      "name": "comment.line.fb"
    },
    "blockComment": {
      "begin": "/\\*",
      "end": "\\*/",
      "name": "comment.block.fb"
    },
    "operator": {
      "match": "\\+=|-=|\\*=|\\/=|%=|<=|>=|==|!=|\\+|-|\\*|\\/|%|<|>|\\||&",
      "name": "keyword.operator.fb"
    },
    "terminator": {
      "match": ";",
      "name": "punctuation.terminator.fb"
    },
    "dot": {
      "match": "\\.",
      "name": "punctuation.other.period.fb"
    },
    "comma": {
      "match": ",",
      "name": "punctuation.other.comma.fb"
    },
    "leftParen": {
      "match": "\\(",
      "name": "punctuation.definition.begin.bracket.round.fb"
    },
    "rightParen": {
      "match": "\\)",
      "name": "punctuation.definition.end.bracket.round.fb"
    },
    "leftBrace": {
      "match": "{",
      "name": "punctuation.definition.begin.bracket.curly.fb"
    },
    "rightBrace": {
      "match": "}",
      "name": "punctuation.definition.end.bracket.curly.fb"
    },
    "leftBracket": {
      "match": "\\[",
      "name": "punctuation.definition.begin.bracket.square.fb"
    },
    "rightBracket": {
      "match": "\\]",
      "name": "punctuation.definition.end.bracket.square.fb"
    },
    "number": {
      "match": "\\b(0x[0-9a-zA-Z]+)|(0b(?:0|1)+)|(-?[0-9]+(\\.[0-9]+)?[fF]?)\\b",
      "name": "constant.numeric.fb"
    },
    "character": {
      "begin": "'",
      "end": "'",
      "name": "string.quoted.single.fb"
    },
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.quoted.double.fb"
    },
    "keyword": {
      "match": "\\b(nil|true|false|and|or|var|if|else|while|for|as|static|extern|intrinsic|func|continue|break|return|struct|impl|enum)\\b",
      "name": "keyword.fb"
    }
  }
}